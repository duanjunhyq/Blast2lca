package wcl

import (
	"fmt"
	"os"
	"bufio"
)

func FromFile (fname string) int, os.Error {
	nlines := 0
	fh, err := os.Open(fname)
	defer fh.Close()
	if err != nil {
		return -1, err
	}
	buf := bufio.NewReader(fh)
	for {
		line, _, err := buf.ReadLine()
		if err == os.EOF {
			return nlines, nil
		}
	}
	return nlines, nil // never used
}
